{
  "name": "sync-station",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/bun": "^1.3.4",
      "better-auth": "^1.4.9",
      "@prisma/client": "^7.1.0"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "check-types": "bun run --filter '*' check-types",
    "dev:native": "bun run --filter native dev",
    "dev:web": "bun run --filter web dev",
    "dev:server": "bun run --filter server dev",
    "db:push": "bun run --filter @sync-station/db db:push",
    "db:studio": "bun run --filter @sync-station/db db:studio",
    "db:generate": "bun run --filter @sync-station/db db:generate",
    "db:migrate": "bun run --filter @sync-station/db db:migrate",
    "db:start": "bun run --filter @sync-station/db db:start",
    "db:watch": "bun run --filter @sync-station/db db:watch",
    "db:stop": "bun run --filter @sync-station/db db:stop",
    "db:down": "bun run --filter @sync-station/db db:down",
    "check": "biome check --write ."
  },
  "dependencies": {
    "@sync-station/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@sync-station/config": "workspace:*",
    "@types/bun": "catalog:",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.3.4"
}
